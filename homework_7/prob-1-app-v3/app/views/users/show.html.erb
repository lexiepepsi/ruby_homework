<div class="show">
	<div>ID: <%= @user.id %></div>
	<h2><%= @user.name %>, aka: <%= @user.profile %></h2>
	<h3>"<%= @user.headline %>"</h3>

	<br>
	<div><%= @user.email %></div>
	<div>Created at: <%= @user.created_at %></div>
</div>

<% if current_user != nil %>
	<% if @user.admin_or_belongs_to?(current_user) %>
		<ul>
			<li><%= link_to('Edit', edit_user_path(@user)) %></li>
			<li><%= link_to('Delete', @user, method: :delete) %></li>
		</ul>
	<% end %>
<% end %>